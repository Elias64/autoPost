{
    "name": "Elias/autopost",
    "type": "phpbb-extension",
    "description": "After a user logs in for the first time, an automatic topic is created in the chosen forum with the chosen text introducing the new user to the community.",
    "homepage": "https://front-host.com",
    "version": "0.0.1",
    "time": "2016-01-27",
    "license": "GPL-2.0",
    "authors": [
        {
            "name": "Elias",
            "email": "eliasnation@gmail.com",
            "homepage": "https://front-host.com",
            "role": "Lead Developer"
        }
    ],
    "require": {
        "php": ">=5.3",
        "composer/installers": "~1.0"
    },
    "extra": {
        "display-name": "Welcome Robot",
        "soft-require": {
             "phpbb/phpbb": "3.1.*@dev"
        },
        "version-check": {
            "host": "phpbbpersian.ir",
            "directory": "/phpbbpersian-extentions",
            "filename": "welcomerobot_version.json"
        }
    }
}